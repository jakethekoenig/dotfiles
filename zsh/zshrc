alias ghco='gh pr checkout'
ghw() {
  if [ -z "$1" ]; then
    # No arguments - try to open PR for current branch
    gh pr view --web
    return $?
  fi

  # Try to view as PR first
  if gh pr view "$1" &>/dev/null; then
    gh pr view --web "$1"
  else
    # If not a PR, view as issue
    gh issue view --web "$1"
  fi
}
alias ghl='gh pr list'
