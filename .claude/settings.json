{
  "permissions": {
    "deny": [
      "Read(~/.zsh/local.zsh)",
      "Read(zsh/local/local.zsh)"
    ]
  },
  "model": "opus",
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/dotfiles/llm/notify.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/dotfiles/llm/notify.sh"
          }
        ]
      }
    ]
  },
  "alwaysThinkingEnabled": true,
  "enabledPlugins": {
    "pyright-lsp@claude-plugins-official": true
  }
}
