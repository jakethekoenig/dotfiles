" set hidden
" Start Up Screen {{{
fun! Start()
  enew
  setlocal
    \ bufhidden=wipe
    \ buftype=nofile
    \ nobuflisted
    \ nocursorcolumn
    \ nocursorline
    \ nolist
    \ nonumber
    \ noswapfile
    \ norelativenumber

  exec ":r ~/.vim/splash.txt"

  setlocal
    \ nomodifiable
    \ nomodified

  nnoremap <buffer><silent> e :enew<CR>
  nnoremap <buffer><silent> i :enew <bar> startinsert<CR>
  nnoremap <buffer><silent> o :enew <bar> startinsert<CR>
endfun

if argc() == 0
  " autocmd VimEnter * call Start()
endif

" }}}
"}}}

