" Goyo {{{
function! s:goyo_enter()
    colorscheme morning
    set nocursorline
    set nocursorcolumn
    set spell
endfunction

function! s:goyo_leave()
    colorscheme murphy
    set cursorline
    set cursorcolumn
    set nospell
endfunction

autocmd! User GoyoEnter nested call <SID>goyo_enter()
autocmd! User GoyoLeave nested call <SID>goyo_leave()
" }}}

" Ultisnips {{{
